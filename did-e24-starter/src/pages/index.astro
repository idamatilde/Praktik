---
import MainLayout from "../layouts/MainLayout.astro";
import Button from '../components/Button.astro';
import Link from '../components/Link.astro';
import { Image } from 'astro:assets';
import thumbsup from "../assets/images/thumbsup.png";
import cutout from "../assets/images/cutout-body.webp";
import text1 from "../assets/images/header-text/multimedie.svg";
import text2 from "../assets/images/header-text/designer.svg";
import text3 from "../assets/images/header-text/med-en.svg";
import text4 from "../assets/images/header-text/passion-for.svg";
---
<MainLayout title="Titel">
	<section id="hero" class="grid grid-cols-2 md:px-72">
		<div class="grid justify-items-end h-72">
			<Image class="h-max w-auto" src={text1} alt="multimedie-"></Image>
			<Image class="h-16 w-auto" src={text2} alt="multimedie-"></Image>	
			<Image class="h-9 w-auto" src={text3} alt="multimedie-"></Image>	
			<Image class="h-9 w-auto" src={text4} alt="multimedie-"></Image>	
<!-- <h1>Multimedie-</h1><h1>designer</h1>
<h2>Med en</h2><h2>passion for</h2>
<h2>User interface</h2> -->
</div>
	<Image src={cutout} alt="Udklip af mig"></Image>
	</section>
	<article>
		<h1>Index overskrift</h1>
		<Button>Klik!</Button>
		<p>Link til <Link href="https://www.kea.dk" target="_blank">En anden side</Link></p>
		<Image src={thumbsup} alt=""></Image>
	</article>
</MainLayout>
